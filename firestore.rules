rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /minawan/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;

      // Explicitly deny access to all nested collections to ensure they are only accessible via Admin SDK
      match /{allPaths=**} {
        allow read, write: if false;
      }
    }
  }
}
